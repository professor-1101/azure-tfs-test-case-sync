[Unit]
Description=Azure Test Plan Import API
Documentation=https://github.com/professor-1101/azure-tfs-test-case-sync
After=network.target
Wants=network.target

[Service]
Type=exec
User=azureapi
Group=azureapi
WorkingDirectory=/opt/azure-test-api
Environment=PATH=/opt/azure-test-api/venv/bin
EnvironmentFile=/opt/azure-test-api/.env
ExecStart=/opt/azure-test-api/venv/bin/python -m uvicorn main:app \
    --host 0.0.0.0 \
    --port 5050 \
    --workers 1 \
    --log-level info

# Restart policy - Auto restart on failure
Restart=always
RestartSec=10
StartLimitIntervalSec=300
StartLimitBurst=5

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/azure-test-api/logs
CapabilityBoundingSet=CAP_NET_BIND_SERVICE

# Resource limits
LimitNOFILE=65536
LimitNPROC=4096

# Health check
ExecReload=/bin/kill -HUP $MAINPID
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
